{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "es2016",
    "module": "commonjs",
    // "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    // "baseUrl": "src",
    "moduleResolution": "node"
  },
  "include": ["src/*.ts"],
  "exclude": [
    "node_modules/**/**",
    ".webpack/**/**",
    "_warmup/**/**",
    ".vscode/**/**",
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}